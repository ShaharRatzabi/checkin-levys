{
  "name": "Review",
  "type": "object",
  "properties": {
    "reviewer_name": {
      "type": "string",
      "description": "שם הלקוח"
    },
    "destination": {
      "type": "string",
      "description": "יעד הטיסה"
    },
    "review_text": {
      "type": "string",
      "description": "הביקורת עצמה"
    },
    "rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "דירוג מ-1 עד 5"
    },
    "will_book_again": {
      "type": "string",
      "enum": ["כן", "לא", "אולי"],
      "description": "האם הלקוח יזמין שוב"
    },
    "image_urls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "תמונות מהטיול"
    },
    "is_featured": {
      "type": "boolean",
      "default": false,
      "description": "האם להציג כביקורת מומלצת"
    },
    "response_text": {
      "type": "string",
      "description": "תגובת בעל העסק"
    }
  },
  "required": ["reviewer_name", "destination", "review_text", "rating"]
}
